@model  IEnumerable<Expense_Tracker_MVC.Models.Category>

    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.7.1/jquery.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/sweetalert/2.1.2/sweetalert.min.js" integrity="sha512-AA1Bzp5Q0K1KanKKmvN/4d3IRKVlv9PYgwFPvm32nPO6QS8yH1HO7LbgB1pgiOxPtfeg5zEn2ba64MUcqJx6CA==" crossorigin="anonymous" referrerpolicy="no-referrer"></script>

<h2>Category Details</h2>
<p>
    <a class="btn btn-success mt-4" asp-controller="Category" asp-action="Edit"> <i class="bi bi-bookmark-plus"></i>  Add</a>
</p>
<table class="table table-bordered border-2 table-striped table-hover">
    <tdead>
        <tr class="bg-dark text-white">
            <th>Category Name</th>
            <th>Action</th>
        </tr>
    </tdead>
    <tbody>
         @if (Model.Count() > 0)
        {
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.CategoryName</td>
                    <th>
                        <a class="btn btn-primary btn-sm mr-2" asp-controller="Category" asp-action="Edit" asp-route-id="@item.CategoryID"> <i class="bi bi-pencil-square"></i> Edit</a>
                        <a class="btn btn-sm btn-danger" onclick="deleteClick('@item.CategoryID')"> <i class="bi bi-bookmark-x"></i> Delete</a>
                    </th>
                </tr>
            }
        }
        else
        {
            <tr>
                <td colspan="2" class="text-center">
                    <marquee width="27%" behavior="alternate"> No records available in Category</marquee>
                </td>
            </tr>
        }
    </tbody>
</table>



<Script>

    function deleteClick(id) {
        swal({
            title: "Are you sure?",
            text: "Once deleted, you will not be able to recover this record!",
            icon: "warning",
            buttons: true,
            dangerMode: true,
        })
            .then((willDelete) => {
                if (willDelete) {
                    $.ajax({
                            url: "/Category/Delete?id=" + id,
                        type: "POST",
                        contentType: false,
                        dataType: "json",
                        success: function (result) {
                            // swal("Poof! Your record has been deleted!", {
                            //     icon: "success",
                            //     timer: 1000
                            // });
                            setTimeout(reload, 50);
                        },
                        error: function (errormessage) {
                            console.log(errormessage.responseText);
                        }
                    });
                }
                else {
                    swal({
                        text: "Your record is safe!",
                        timer: 850
                    });
                }
            });
    };

    function reload() {
        window.location.reload();
    }
</Script>

