 <div>
	
		<div id="MonthlyChart" style="height: 370px; width: 100%;"></div>
		<div id="chartContainer" class="mt-5 ml-4" style="height: 370px; width: 100%;"></div>
		<script src="https://cdn.canvasjs.com/canvasjs.min.js"></script>
		<script src="https://canvasjs.com/assets/script/jquery-1.11.1.min.js"></script>
 </div>


 @* <a class="btn btn-primary btn-sm mr-2" asp-controller="Home" asp-action="Privacy"> <i class="bi bi-pencil-square"></i>Report</a> *@


	@* <div id="MonthlyChart" style="height: 370px; width: 100%;"></div> *@

	

</div>

<script>
	window.onload = function () {
	var chart = new CanvasJS.Chart("chartContainer", {
			theme: "light1", // "light1", "light2", "dark1", "dark2"
		exportEnabled: false,
		animationEnabled: true,
		title: {
			text: "Amount Spend based on Category",
			fontSize: 25
		},
		data: [{
			type: "pie",
			startAngle: 120,
			toolTipContent: "<b>{label}</b>: Rs.{y}",
			indexLabel: "{label} - Rs.{y}",
			dataPoints: @Html.Raw(ViewBag.DataPoint)
		}]
	});
	chart.render();

	}

	var chart = new CanvasJS.Chart("MonthlyChart", {
		theme: "light1", // "light1", "light2", "dark1", "dark2"
		exportEnabled: false,
		animationEnabled: true,
		title: {
			text: "Amount Spend By Month"
		},
		toolTip: {
			shared: true
		},
			data: @Html.Raw(ViewBag.DataPoints)
	});
	chart.render();

</script>

