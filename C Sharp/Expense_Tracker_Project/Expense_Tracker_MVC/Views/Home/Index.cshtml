@{
    ViewData["Title"] = "Home Page";
}
<div class="text-center mb-5">
    <h3 class="display-4">Welcome To Expense Tracker</h3>
@*     <a class="btn btn-primary btn-sm mr-2" asp-controller="Home" asp-action="Chart"> <i class="bi bi-pencil-square"></i>Report</a>
